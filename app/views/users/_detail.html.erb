<div id="user_detail">
  <div class="user_detail_img">
    <%= image_tag "header.png" %>
  </div>
  <div class="user_info_bar">
    <div class="info_bar_box">
      <div class="user_img">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% else %>
          <%= image_tag "icon.png" %>
        <% end %>
      </div>
      <div id="user_nav">
        <ul class="user_nav">
          <li><%= link_to "フォロー(#{@user.followings.count})", following_user_path(@user), class: "nav-link" %></li>
          <li><%= link_to "フォロワー(#{@user.followers.count})", followers_user_path(@user), class: "nav-link" %></li>
          <li>コミュニティ</li>
        </ul>
        <% if signed_in? && @user != current_user%>
          <div id="follow_form">
            <% if current_user.following?(@user) %>
              <%= render "relationships/unfollow" %>
            <% else %>
              <%= render "relationships/follow" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>