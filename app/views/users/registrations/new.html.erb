<%= render "shared/header" %>

<div class="user_new">
  <h2>ユーザー新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>

    <div class="user_new_field">
      <label>ユーザー名<span>必須</span></label>
      <%= f.text_field :user_nickname, autofocus: true, placeholder: "お名前", autocomplete: "user_nickname" %>
    </div>

    <div class="user_new_field">
      <label>メールアドレス<span>必須</span></label>
      <%= f.email_field :email, autofocus: true, placeholder: "例)example@example.com", autocomplete: "email" %>
    </div>

    <div class="user_new_field">
      <label>パスワード<span>必須</span></label>
      <%= f.password_field :password, placeholder: "半角英数6文字以上", autocomplete: "new-password" %>
    </div>

    <div class="user_new_field user_new_field_last">
      <label>パスワードの確認<span>必須</span></label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="user_new_actions">
      <%= f.submit "登録する", class: "user_new_submit" %>
    </div>
  <% end %>
</div>

<%#= render "devise/shared/links" %>

<%= render "shared/footer" %>