<%= render "shared/header" %>

<!-- 古着コミュニティ -->
<div id="community">
  <h2>・・・・古着コミュニティ・・・・</h2>
  <div class="community">
    <div class="community_content">
      <div class="community_flex">
        <% @communities.each do |community| %>
          <%= link_to community_path(community.id), class: 'community_box' do %>
            <div class="community_img">
              <%= image_tag community.image %>
              <div class="community_info">
                <%= community.community_title.truncate(12) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <ul>
        <li><%= paginate @communities %></li>
      </ul>
    </div>

    <div class="community_right">
      <div class="community_btn">
        <%= link_to 'コミュニティを新規作成', new_community_path, class: "community_link" %>
        <%= link_to '参加中のコミュニティ', root_path, class: "community_link" %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>