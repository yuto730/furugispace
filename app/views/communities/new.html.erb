<%= render "shared/header" %>

<div id="community_form">
  <h2>コミュニティを作成</h2>
  <%= form_with(model: @community, local: true) do |f|%>

    <div class="community_form_field">
      <label>コミュニティ名<span>必須</span></label><br>
      <%= f.text_field :community_title %>
    </div>

    <div class="community_form_field">
      <label>プロフィール文<span>必須</span></label><br>
      <%= f.text_area :community_profile %>
    </div>

    <div class="image-field">
      <label>サムネイル画像<span>必須</span></label><br>
      <label class="image-file">
        <p>画像を登録</p>
        <%= f.file_field :image, class: 'hidden' %>
        <div id="image-preview">
          <% if @community.image.attached? %>
            <%= image_tag @community.image.variant(resize_to_fill: [80, 80]).processed %>
          <% end %>
        </div>
      </label>
    </div>

    <div class="community_form_action">
      <%= f.submit "作成する" %>
    </div>

  <% end %>
</div>

<%= render "shared/footer" %>